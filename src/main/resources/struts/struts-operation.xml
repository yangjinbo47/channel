<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!-- 运营相关 -->
	<package name="operation" namespace="/operation" extends="default">
		<!-- H码表 -->
		<action name="mobileArea_*" method="{1}" class="com.tenfen.www.action.system.operation.MobileAreaAction"></action>
		<!-- 黑名单管理 -->
		<action name="blackList_*" method="{1}" class="com.tenfen.www.action.system.operation.BlackListAction"></action>
		
		<!-- 包月相关 -->
		<action name="pushPackage_*" method="{1}" class="com.tenfen.www.action.system.operation.pack.PushPackageAction"></action>
		<action name="pushPackageChannel_*" method="{1}" class="com.tenfen.www.action.system.operation.pack.PushPackageChannelAction"></action>
		<action name="order_*" method="{1}" class="com.tenfen.www.action.system.operation.pack.OrderAction"></action>
		<action name="pushSeller_*" method="{1}" class="com.tenfen.www.action.system.operation.pack.PushSellerAction"></action>
		<action name="pushMail_*" method="{1}" class="com.tenfen.www.action.system.operation.pack.PushMailAction"></action>
		
		<!-- 开放平台运营 -->
		<action name="openMerchant_*" method="{1}" class="com.tenfen.www.action.system.operation.open.OpenMerchantAction"></action>
		<action name="openApp_*" method="{1}" class="com.tenfen.www.action.system.operation.open.OpenAppAction"></action>
		<action name="openProductInfo_*" method="{1}" class="com.tenfen.www.action.system.operation.open.OpenProductInfoAction"></action>
		<action name="openSeller_*" method="{1}" class="com.tenfen.www.action.system.operation.open.OpenSellerAction"></action>
		<action name="openOrder_*" method="{1}" class="com.tenfen.www.action.system.operation.open.OpenOrderAction"></action>
		<action name="openMail_*" method="{1}" class="com.tenfen.www.action.system.operation.open.OpenMailAction"></action>
		
		<!-- 短信平台运营 -->
		<action name="smsMerchant_*" method="{1}" class="com.tenfen.www.action.system.operation.sms.SmsMerchantAction"></action>
		<action name="smsApp_*" method="{1}" class="com.tenfen.www.action.system.operation.sms.SmsAppAction"></action>
		<action name="smsProductInfo_*" method="{1}" class="com.tenfen.www.action.system.operation.sms.SmsProductInfoAction"></action>
		<action name="smsSeller_*" method="{1}" class="com.tenfen.www.action.system.operation.sms.SmsSellerAction"></action>
		<action name="smsOrder_*" method="{1}" class="com.tenfen.www.action.system.operation.sms.SmsOrderAction"></action>
		<action name="smsMail_*" method="{1}" class="com.tenfen.www.action.system.operation.sms.SmsMailAction"></action>
		
		<!-- 三方支付平台运营 -->
		<action name="thirdpartMerchant_*" method="{1}" class="com.tenfen.www.action.system.operation.thirdpart.ThirdpartMerchantAction"></action>
		<action name="thirdpartApp_*" method="{1}" class="com.tenfen.www.action.system.operation.thirdpart.ThirdpartAppAction"></action>
		<action name="thirdpartSeller_*" method="{1}" class="com.tenfen.www.action.system.operation.thirdpart.ThirdpartSellerAction"></action>
	</package>

</struts>
